<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorWhite"
    card_view:cardBackgroundColor="@color/colorCardPurple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/valVaccinationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Sample"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_15sp" />

            <ImageView
                android:id="@+id/imgDone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_done"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ContentTag"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/valContentTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:text="Sample"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Doses"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/valDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:text="Sample"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ApproxPrice"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/valApproxPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:text="Sample"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <!-- <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="2"
                 android:gravity="center_vertical"
                 android:orientation="vertical">-->

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:switchPadding="5dp"
                android:text="@string/MarkDone"
                android:textSize="@dimen/text_12sp"
                android:theme="@style/SCBSwitch" />
            <!-- </LinearLayout>-->

            <ImageView
                android:id="@+id/imgReminder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_reminder"
                android:visibility="gone" />
            <!--  <RelativeLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="20dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:orientation="vertical">

                  <Button
                      android:layout_width="30dp"
                      android:layout_height="33dp"
                      android:layout_alignParentRight="true"
                      android:layout_weight="2"
                      android:background="@color/colorBackgroundGray"
                      android:text="@string/AddReminder"
                      android:textColor="@color/colorWhite"
                      android:textSize="@dimen/text_12sp" />
              </RelativeLayout>-->
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>